// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// ─── Enums ────────────────────────────────────────────────────────────────────

enum CampaignGoal {
  LEADS
  SALES
  TRAFFIC
  APP_INSTALLS
}

enum ConversationType {
  ONBOARDING
  CAMPAIGN
  AGENT
}

enum ConversationStatus {
  ACTIVE
  COMPLETED
  ARCHIVED
}

enum MessageType {
  TEXT
  APPROVAL_REQUEST
  APPROVAL_RESPONSE
  AGENT_ACTION
  FB_CONNECT
}

enum ArtifactType {
  BRIEF
  AD_COPY
  CAMPAIGN
  IMAGE
  REPORT
  ACTION
  COMPETITION
}

enum CampaignStatus {
  DRAFT
  PENDING_APPROVAL
  ACTIVE
  PAUSED
  COMPLETED
}

enum NotificationType {
  APPROVAL_NEEDED
  AGENT_UPDATE
  ALERT
  REPORT
}

// ─── Auth models (managed by Better Auth) ─────────────────────────────────────

model User {
  id                 String              @id
  name               String
  email              String
  emailVerified      Boolean             @default(false)
  image              String?
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
  stripeCustomerId   String?
  credits            Int                 @default(0)
  sessions           Session[]
  accounts           Account[]
  projects           Project[]
  facebookConnection FacebookConnection?
  notifications      Notification[]

  @@unique([email])
  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@index([userId])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@index([userId])
  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([identifier])
  @@map("verification")
}

// ─── Core models ──────────────────────────────────────────────────────────────

model Project {
  id            String          @id @default(cuid())
  userId        String
  user          User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  name          String
  description   String?
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  brief         ProjectBrief?
  conversations Conversation[]
  campaigns     CampaignRecord[]
  artifacts     Artifact[]
  notifications Notification[]

  @@index([userId])
  @@map("project")
}

model ProjectBrief {
  id                  String       @id @default(cuid())
  projectId           String       @unique
  project             Project      @relation(fields: [projectId], references: [id], onDelete: Cascade)
  businessDescription String
  product             String
  targetAudience      String
  goal                CampaignGoal
  monthlyBudget       Int          // in cents
  location            String
  uniqueSellingPoint  String
  websiteUrl          String?
  createdAt           DateTime     @default(now())
  updatedAt           DateTime     @updatedAt

  @@map("project_brief")
}

model FacebookConnection {
  id          String   @id @default(cuid())
  userId      String   @unique
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  fbAccountId String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("facebook_connection")
}

model Conversation {
  id               String             @id @default(cuid())
  projectId        String
  project          Project            @relation(fields: [projectId], references: [id], onDelete: Cascade)
  type             ConversationType   @default(ONBOARDING)
  status           ConversationStatus @default(ACTIVE)
  title            String             @default("New conversation")
  campaignRecordId String?
  campaignRecord   CampaignRecord?    @relation(fields: [campaignRecordId], references: [id])
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt
  messages         Message[]
  artifacts        Artifact[]
  notifications    Notification[]

  @@index([projectId])
  @@map("conversation")
}

model Message {
  id             String      @id @default(cuid())
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  role           String       // user | assistant | system
  type           MessageType  @default(TEXT)
  content        String
  metadata       Json?        // structured payload for non-text message types
  createdAt      DateTime     @default(now())

  @@index([conversationId])
  @@map("message")
}

model Artifact {
  id             String       @id @default(cuid())
  projectId      String
  project        Project      @relation(fields: [projectId], references: [id], onDelete: Cascade)
  conversationId String?
  conversation   Conversation? @relation(fields: [conversationId], references: [id])
  type           ArtifactType
  title          String
  content        Json
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  @@index([projectId])
  @@map("artifact")
}

model CampaignRecord {
  id             String         @id @default(cuid())
  projectId      String
  project        Project        @relation(fields: [projectId], references: [id], onDelete: Cascade)
  status         CampaignStatus @default(DRAFT)
  structure      Json           // the approved campaign structure
  fbCampaignId   String?        // set after deployment
  fbAdSetIds     Json?          // array of ad set IDs
  fbAdIds        Json?          // array of ad IDs
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  conversations  Conversation[]
  snapshots      PerformanceSnapshot[]

  @@index([projectId])
  @@map("campaign_record")
}

model PerformanceSnapshot {
  id                String         @id @default(cuid())
  campaignRecordId  String
  campaignRecord    CampaignRecord @relation(fields: [campaignRecordId], references: [id], onDelete: Cascade)
  date              DateTime       @db.Date
  spend             Int            // in cents
  impressions       Int
  reach             Int
  clicks            Int
  ctr               Float
  conversions       Int
  costPerConversion Int            // in cents
  roas              Float
  raw               Json           // full FB API response for debugging
  createdAt         DateTime       @default(now())

  @@unique([campaignRecordId, date])
  @@index([campaignRecordId])
  @@map("performance_snapshot")
}

model Notification {
  id             String           @id @default(cuid())
  userId         String
  user           User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  projectId      String?
  project        Project?         @relation(fields: [projectId], references: [id])
  conversationId String?
  conversation   Conversation?    @relation(fields: [conversationId], references: [id])
  type           NotificationType
  title          String
  body           String
  read           Boolean          @default(false)
  createdAt      DateTime         @default(now())

  @@index([userId, read])
  @@map("notification")
}
